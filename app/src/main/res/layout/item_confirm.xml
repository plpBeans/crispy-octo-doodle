<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_80"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:layout_marginLeft="@dimen/margin_25"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_25">

            <TextView
            android:id="@+id/tx_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_title_black3"
            android:textSize="@dimen/text_15"
            android:layout_toLeftOf="@+id/tx_goodsPrice"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/text_title_black3"
                android:layout_toLeftOf="@+id/tx_oldPrice"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tx_oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/text_gray6"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/tx_goodsSpecs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray6"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tx_goodsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_title_black3"
                android:textSize="@dimen/text_13" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
