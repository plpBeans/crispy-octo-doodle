<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.shopaddress.shopdetail.ShopDetailActivity">
        <RelativeLayout
            android:id="@+id/rl_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_180">
            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_180"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_shop_count"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_30"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_shop_pic"/>
                <TextView
                    android:id="@+id/tx_pic_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="@dimen/margin_35"
                >
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:scaleType="center"
                    android:src="@mipmap/shop_back"/>
            </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="-30dp"

        >
        <LinearLayout
            android:id="@+id/ll_shopInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_180"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:gravity="center"
            android:background="@mipmap/bg_shop_info">
            <TextView
                android:id="@+id/tx_shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15"
                android:gravity="center"
                android:textColor="@color/text_title_black3"/>
            <TextView
                android:id="@+id/tx_shopTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_14"
                android:gravity="center"
                android:textColor="@color/text_gray6"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_14"
                android:gravity="center"
                android:textColor="@color/text_title_black3"/>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/recyclerview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shop_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/bg_shop_map"
            android:layout_below="@+id/ll_shopInfo"
            android:layout_above="@+id/btn_go_shopping"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20">
            <TextView
                android:id="@+id/tx_shopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:gravity="left|center_vertical"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/text_title_black3"/>
                <com.amap.api.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20">

                </com.amap.api.maps.MapView>
        </LinearLayout>
        <Button
            android:id="@+id/btn_go_shopping"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentBottom="true"
            android:text="去喝一杯"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:background="@mipmap/btn_shop_buy"/>
    </RelativeLayout>
</LinearLayout>
