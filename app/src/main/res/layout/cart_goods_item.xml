<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/margin_60">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="@dimen/margin_18"
            android:layout_height="@dimen/margin_18"
            android:src="@mipmap/bg_xuan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"/>
    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:layout_toRightOf="@+id/img_choose"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_5"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/tx_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_title_black3"
                android:gravity="center_vertical|left"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_15"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/tx_specs"
                />
            <TextView
                android:id="@+id/tx_specs"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="70dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/text_gray6"
                android:textSize="@dimen/text_13"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">
            <LinearLayout
                android:id="@+id/rl_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/addCount"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tx_realPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF5A00"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/text_13"/>
                <TextView
                    android:id="@+id/tx_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BFBFBF"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/text_10"
                    android:layout_marginLeft="@dimen/margin_10"/>
            </LinearLayout>
                <vip.hengnai.wine.view.AddDeleteView
                    android:id="@+id/addCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="#F2F2F4"/>
</LinearLayout>
