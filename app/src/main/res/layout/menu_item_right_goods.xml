<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_80"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <ImageView
       android:id="@+id/img_goods"
       android:layout_width="@dimen/margin_50"
       android:layout_height="@dimen/margin_50"
       android:layout_marginLeft="@dimen/margin_10"
       android:layout_marginRight="@dimen/margin_10"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       />

    <TextView
        android:id="@+id/tx_goodsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="@color/text_title_black3"
        android:textSize="@dimen/text_15"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_goods"
        app:layout_constraintTop_toTopOf="@id/img_goods"/>
    <TextView
        android:id="@+id/tx_realPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#FF6600"
        android:textSize="@dimen/text_15"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_5"
        app:layout_constraintLeft_toRightOf="@+id/img_goods"
        app:layout_constraintBottom_toBottomOf="@id/img_goods"/>
    <TextView
        android:id="@+id/tx_discountPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center_vertical|left"
        android:textColor="#cccccc"
        android:textSize="@dimen/text_15"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        app:layout_constraintRight_toLeftOf="@id/img_add"
        app:layout_constraintLeft_toRightOf="@+id/tx_realPrice"
        app:layout_constraintBottom_toBottomOf="@id/tx_realPrice"/>
    <ImageView
        android:id="@+id/img_add"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:src="@mipmap/btn_add"
        app:layout_constraintBottom_toBottomOf="@id/tx_realPrice"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>