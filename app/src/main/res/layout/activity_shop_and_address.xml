<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.menu.shopaddress.ShopAndAddressActivity">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@mipmap/ic_back"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_shop"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_35"
                android:layout_centerVertical="true"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8dp"
                android:autoSizeMaxTextSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="门店自提"
                android:background="@drawable/address_choose_black_left"
                />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_outCall"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_35"
                    android:layout_centerVertical="true"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8dp"
                    android:autoSizeMaxTextSize="16dp"
                    android:textColor="@color/shop"
                    android:gravity="center"
                    android:text="送货上门"
                    android:background="@drawable/address_choose_white_right"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/guanli"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_35"
                android:layout_alignParentRight="true"
                android:text="管 理"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="#FF88AD9F"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@mipmap/bg_shop_address_city">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="7dp"
                android:autoSizeMaxTextSize="14dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:textColor="@color/text_title_black3"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:scaleType="center"
                android:src="@mipmap/icon_choose_city" />
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="#D3D3D3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:scaleType="center"
                android:src="@mipmap/icon_shop_search"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="7dp"
                android:autoSizeMaxTextSize="14dp"
                android:hint="小区/写字楼/学校等"
                android:paddingLeft="8dp"
                android:textColor="@color/text_title_black3"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ziTi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="7dp"
            android:autoSizeMaxTextSize="14dp"
            android:text="当前定位"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_15"
            android:textColor="@color/text_gray6"
            android:textSize="14sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30">
            <ImageView
                android:id="@+id/img_dingwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_dingwei"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="7dp"
                android:autoSizeMaxTextSize="17dp"
                android:text=""
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@+id/img_dingwei"
                android:textColor="@color/text_title_black3"
                android:textSize="14sp"
                android:ellipsize="end"
                android:lines="1"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_startLocation"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="7dp"
                android:autoSizeMaxTextSize="17dp"
                android:text="重新定位"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/start_location"
                android:textSize="14sp"
                android:ellipsize="end"
                android:lines="1"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_5"
            android:background="#FFF6F6F6"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="7dp"
            android:autoSizeMaxTextSize="14dp"
            android:text="附近店铺"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_15"
            android:textColor="@color/text_gray6"
            android:textSize="14sp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_songHuo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_add_address">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/poiRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_all_address"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_5"
        >

        <LinearLayout
            android:id="@+id/ll_my_address"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="7dp"
                android:autoSizeMaxTextSize="14dp"
                android:text="我的收货地址"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/text_gray6"
                android:textSize="14sp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_local_person_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_nearAddress"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="300dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:autoSizeMaxTextSize="14dp"
                android:text="附近地址"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_15"
                android:textColor="@color/text_gray6"
                android:textSize="14sp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_add_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@mipmap/btn_tianjia"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_jia"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/btn_add_address"/>
        <Button
            android:id="@+id/btn_add_address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:text="添加地址"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_16"
            />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
