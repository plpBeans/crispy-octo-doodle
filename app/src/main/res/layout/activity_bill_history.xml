<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_activity_fragment"
    tools:context="vip.hengnai.wine.ui.mine.bill.BillDetailActivity">
    <include
        layout="@layout/header_layout"
        android:id="@+id/header"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_35"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="共"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center"
            android:textColor="#8C9192"
            android:textSize="@dimen/text_15"/>
        <TextView
            android:id="@+id/tx_countBill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textColor="#FF9A2E"
            android:textSize="@dimen/text_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="张发票，含"
            android:gravity="center"
            android:textColor="#8C9192"
            android:textSize="@dimen/text_15"/>
        <TextView
            android:id="@+id/tx_countOrder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textColor="#FF9A2E"
            android:textSize="@dimen/text_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个订单"
            android:gravity="center"
            android:textColor="#8C9192"
            android:textSize="@dimen/text_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="发票类型"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="电子发票"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="开票状态"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="已申请"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="发票金额"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="￥3"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="发票抬头"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billRise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="单位"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="申请时间"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="2019-11-18 14:30"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_16"
                android:text="邮箱地址"
                android:textColor="@color/hintColor"/>
            <TextView
                android:id="@+id/tx_billMail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_40"
                android:textSize="@dimen/text_16"
                android:text="398802135@qq.com"
                android:textColor="@color/text_gray6"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
