<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vip.hengnai.wine.ui.login.WxLoginActivity">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35"
            >
            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_35"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:scaleType="center"
                android:src="@mipmap/icon_login_left"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_16"
                android:textColor="#3F3F3F"
                android:layout_marginLeft="@dimen/margin_5"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:text="登录全代"
                android:layout_toRightOf="@+id/img_location"/>
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_back"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/ll_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青小啤先生"
            android:textSize="@dimen/text_14"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/text_title_black3"/>
        <Button
            android:id="@+id/btn_WxLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信一键登录"
            android:layout_below="@+id/ll_login"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:textSize="@dimen/text_16"
            android:background="@mipmap/btn_login"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机验证码登录"
            android:layout_below="@+id/ll_login"
            android:textColor="@color/shop"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:textSize="@dimen/text_16"
            android:background="@mipmap/bg_wx_login"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</LinearLayout>
